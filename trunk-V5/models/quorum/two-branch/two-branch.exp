.global
        .solver = "lqns";
        .format = "csv";
        .template = "twolayer-2branches-k-a-c-d.in";
.end

.experiment "lqns-det"

        .set
                .solver = "lqns";
		.lqnsopts = "";

	.initialize
		.pq ( pB1 ) = 0.1;

        .declare
                k1 = 1, 2, 3, 4, 5;		# Quorum count

        .vary
                k1;

        .control
                .aqc ( tB1, a1, a5 ) = { k1 };

        .observe
                .plot { k1 };
                .xt ( .e, eB1, 1 );
		.vt ( .e, eB1, 1 );
.end



